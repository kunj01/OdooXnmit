// Priority: "LOW", "MEDIUM", "HIGH", "URGENT"
// NotificationType: "TASK_ASSIGNED", "TASK_UPDATED", "TASK_DUE_SOON", "TASK_OVERDUE", "PROJECT_INVITED", "COMMENT_ADDED", "DISCUSSION_ADDED"
